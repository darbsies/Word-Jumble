body
  margin 0px
  font-family Lato
  color white

  .purple-background

    background #4A0093
    width 100%
    height 100vh
    text-align center
    .word-jumble-title
      margin-top 0px
      color white
      h1
        font-weight 200
        margin 0
      h2
        font-weight 100
    .letters
      .letter
        font-size 60px
      .circle-frame
        display inline-block
        height 100px
        width 100px
        margin 20px
        border-radius 100px
        text-align center
        border 4px solid whitesmoke
    .footer
        .time-header
          display inline-block
          vertical-align top
          margin-right 4px
        .time-value
          display inline-block
          vertical-align top
        .point-header
          display inline-block
          vertical-align top
          margin-right 4px
        .point-value
          display inline-block
          vertical-align top






